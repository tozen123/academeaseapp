<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ScanExamReadyActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
<!--        <Button-->
<!--            android:id="@+id/testHelloButton"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Test /hello API"-->
<!--            android:layout_marginTop="16dp" />-->

        <!-- Existing TextViews -->
        <TextView
            android:id="@+id/testNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/selectedSetTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected Set"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/documentIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Document ID"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/testAnswerDocument"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answers: []"
            android:textSize="16sp" />


        <Button
            android:id="@+id/showQuestionsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Questions" />


        <Button
            android:id="@+id/capturePhotoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capture Photo" />



    </LinearLayout>

</RelativeLayout>
